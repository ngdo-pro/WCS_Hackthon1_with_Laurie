{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sock</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sock.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ sock.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ sock.lastName }}</td>
            </tr>
            <tr>
                <th>Imgurl</th>
                <td>{{ sock.imgUrl }}</td>
            </tr>
            <tr>
                <th>Hasvoted</th>
                <td>{% if sock.hasVoted %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Sockvotecount</th>
                <td>{{ sock.sockVoteCount }}</td>
            </tr>
            <tr>
                <th>Personvotecount</th>
                <td>{{ sock.personVoteCount }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ sock.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sock_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sock_edit', { 'id': sock.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
